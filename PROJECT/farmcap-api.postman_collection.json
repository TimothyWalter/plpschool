{
  "info": {
    "name": "FarmCap API - MongoDB",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\": \"Test User\", \"email\": \"test@example.com\", \"password\": \"password\"}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/signup",
          "host": [
            "http://localhost:5000"
          ],
          "path": [
            "api",
            "auth",
            "signup"
          ]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"alice@example.com\", \"password\": \"password\"}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/login",
          "host": [
            "http://localhost:5000"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        }
      }
    },
    {
      "name": "Create Order (use token)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"items\": [{\"productName\": \"Maize\", \"price\": 200, \"quantity\": 2}]}"
        },
        "url": {
          "raw": "http://localhost:5000/api/orders",
          "host": [
            "http://localhost:5000"
          ],
          "path": [
            "api",
            "orders"
          ]
        }
      }
    },
    {
      "name": "Webhook Test (payment success)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"provider\": \"mpesa\", \"transactionId\": \"TEST123\", \"status\": \"success\", \"orderId\": \"1\"}"
        },
        "url": {
          "raw": "http://localhost:5000/api/webhooks/payment",
          "host": [
            "http://localhost:5000"
          ],
          "path": [
            "api",
            "webhooks",
            "payment"
          ]
        }
      }
    }
  ]
}