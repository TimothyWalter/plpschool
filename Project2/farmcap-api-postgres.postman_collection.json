{
  "info": {
    "name": "FarmCap API - Postgres",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Order (public)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"items\": [{\"productName\": \"Maize\", \"price\": 200, \"quantity\": 2}]}"
        },
        "url": {
          "raw": "http://localhost:5001/api/orders",
          "host": [
            "http://localhost:5001"
          ],
          "path": [
            "api",
            "orders"
          ]
        }
      }
    },
    {
      "name": "Webhook Test (payment success)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"provider\": \"mpesa\", \"transactionId\": \"TEST123\", \"status\": \"success\", \"orderId\": \"1\"}"
        },
        "url": {
          "raw": "http://localhost:5001/api/webhooks/payment",
          "host": [
            "http://localhost:5001"
          ],
          "path": [
            "api",
            "webhooks",
            "payment"
          ]
        }
      }
    }
  ]
}